import com.rameses.annotations.*;

class OboAppnoGeneratorService {
	
	@Service("DateService")
	def dateSvc;

	@Service("ControlnoGeneratorService")
	def controlNoSvc;

	@Service("Var")
	def sysvar;

	@DataContext("building_permit")
	def appEm;

	@DataContext(dynamic=true)
	def db;

	@Env
	def env;

	@ProxyMethod
	public def generate(def o ) {
		if(!o.controlnopattern) throw new Exception("controlnopattern is required");
		def pattern = sysvar.get( o.controlnopattern );
		if(!pattern) throw new Exception("Please define building_permit_appno entry in sys_var. Ex. BP-[yyyyMM]-[%05d]");
		def appno = controlNoSvc.getNextNo( pattern );
		if( o._schemaname && o.appid ) {
			def appEm = db.lookup( o._schemaname );
			def u = [:];
			u.appdate = dateSvc.getServerDate();
			u.appno = appno;
			appEm.find( [objid: o.appid ] ).update( u );
		}		
		return appno;
	} 



}