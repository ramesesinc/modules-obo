import com.rameses.annotations.*;
import com.rameses.util.*;


class BuildingEvaluationTypeService {
	
	@DataContext("building_evaluation_type")
	def typeEm;

	@Env
	def env;

	@Service("OboUserRoleService")
    def roleSvc;

	@ProxyMethod
	public def getAllowedEvaluationTypes( def o ) {
		def m = [:];
        m.roles = roleSvc.getRolesString(o); 
        m.orgid = (env.ORGROOT==1) ? "root" : env.ORGID;
        return typeEm.getAllowedTypes( m );
    }    


	
}