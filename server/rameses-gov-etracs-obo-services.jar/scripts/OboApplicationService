import com.rameses.annotations.*;
import com.rameses.util.*;
import java.rmi.server.*;
import obo.facts.*;
import java.text.*;
import treasury.utils.*;
import treasury.facts.*;

public class OboApplicationService  {

	@Service("DateService")
	def dateSvc;

	@Service("WorkflowTaskService")
	def wfSvc;

	@DataContext("obo_application")
	def appEm;

	@DataContext("obo_account")
	def acctEm;

	@ProxyMethod
	public def create(o) {
		//if acctid does not exist create a new account
		if(!o.subapplications) throw new Exception("There must be at least one subapplication");

		if(!o.acctid) {
			def m = [objid: "OBOACCT" + new UID() ];
			acctEm.create( m );
			o.acctid = m.objid;
		}

		def dt = dateSvc.getServerDate();
		o.appdate = dt;
		o.appno = "OBOAPP" + new UID();
		def app = appEm.create( o );

		def p = [:];
		p.processname = 'obo_application';
		p.refid = app.objid;
		p.startdate = dt;
		p.info = app;
		wfSvc.start(p);		

		return app;

	}

	


}