import com.rameses.annotations.*;

class BuildingApplicationService {
	
	@Service("DateService")
	def dateSvc;

	@Service("ControlnoGeneratorService")
	def controlNoSvc;

	@Service("Var")
	def sysvar;

	@DataContext("building_application")
	def appEm;

	@DataContext("building_permit")
	def permitEm;

	@DataContext("obo_doctype")
	def docTypeEm;

	@DataContext("building_application_subdoc")
	def subdocEm;

	@DataContext("building_issuance")
	def issEm;

	@DataContext("vw_building_application")
	def vwAppEm;

	@DataContext("vw_building_evaluation")
	def vwEvalEm;


	@Env
	def env;

	@ProxyMethod
	public def generateAppNo(def o ) {
		if(!o.appid) throw new Exception("Please specify an appid in OboApplicationService.accept");
		def appid = o.appid;


		def pattern = sysvar.get( "building_application_appno" );
		if(!pattern) throw new Exception("Please define building_application_appno entry in sys_var. Ex. BP-[yyyyMM]-[%05d]");

		def u = [:];
		u.appdate = dateSvc.getServerDate();
		u.appno = controlNoSvc.getNextNo( pattern );
		appEm.find( [objid: appid ] ).update( u );
		return u;
	} 

	@ProxyMethod
	public def verifyApp( def o  ) {
		def app = vwAppEm.find( o ).first();
		if(!app) throw new Exception("Application does not exist");
		return [trackingno:app.trackingno, appno:app.appno, email: app.contact.email, mobileno: app.contact.mobileno ];
	}

	@ProxyMethod
	public def findAppStatus( def o  ) {
		def app = vwAppEm.find( o ).first();
		if(app.task.tracktime !=1) {
			app.task.assignee = [name:"Applicant"];
		}

		if( app.task.state == 'trade-evaluation' ) {
			app.subtasks = vwEvalEm.find( [appid: app.objid ]).where("task.state NOT IN ('start','end')").list();
		}
		else {
			app.subtasks = [];
		}
		return app;
	}
	
	@ProxyMethod
	public def getProfessionalList(def o) {
		return vwAppEm.getProfessionalList( [appid: o.objid ] );
	}

	@Service("JasperReportEmailService")
	def emailSvc;

	@ProxyMethod
	public void emailPermits( def o ) {
		def subdocs = subdocEm.getSubdocsToEmail( [appid: o.objid ]);

		println "**************"
		subdocs.each {
			println it.objid + " " + it.doctypeid + " " + it.template;
		}
	}

}