<script>
	\$put( "askrefno", new function() {

		var self = this;
		this.refno;

		var app = \$get("billing").code;

		this.search = function() {
			var handler = function() {
				window.location.hash = WindowUtil.buildHash( "viewbill", {refno:self.refno} );
			}
			app.loadBill( {refno: this.refno}, handler );
		}

	})
</script>
<style>
	.caption-class { width: 250px; }
</style>

<div class="form">
  @wx:text(caption:'Enter Application No', context:'askrefno', name:'refno')
</div>
@wx:button( caption:'Submit', context:'askrefno', name:'search')
