                        <table r:context="${PAGE.context}" r:items="entity.items" r:varName="x" width="100%" r:name="selectedItem" style="display:none" class="table">
                          <thead>
                            <tr>
                              <th scope="col">Description</th>
                              <th scope="col">Units</th>
