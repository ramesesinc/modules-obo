<script>
\$put( "tdnumber",
   new function() {
   		this.tdno;
	  	this.callbackHandler;
	  
	  this.submit = function() {
		if(this.callbackHandler) this.callbackHandler(this.tdno);
		return "_close";
	  }


	  this.doClose = function(){
	  	return "_close"
	  }
   });  
</script>


<div class="form-group">
  <input type="text" r:context="tdnumber" r:name="tdno"  class="form-control" required/>
</div>

<input type="submit" r:context="tdnumber" r:name="submit" value="Add" class="btn btn-submit btn-primary"/>
<input type="button" r:context="tdnumber" r:name="doClose" value="Cancel" class="btn btn-submit btn-warning"/>
  
       	

     
