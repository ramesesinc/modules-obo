<workunit schemaName="vw_building_permit_issuance" processName="building_permit_issuance">
    <invokers>
        <invoker type="vw_building_permit_issuance:open" 
                caption="#{entity.type.title}"
                action="open"/>     
        
        <!-- form actions -->
        <invoker type="mainActions" caption="View Application" 
            action="viewApplication" />

            <invoker type="mainActions" caption="Issue Permit/Clearance" 
            action="issue" visibleWhen="#{ entity.controlno == null &amp;&amp; task.assignee.objid == userInfo.userid }" />
        
            <invoker type="mainActions" caption="Print Permit/Clearance" 
            action="print" visibleWhen="#{ entity.controlno != null &amp;&amp; task.assignee.objid == userInfo.userid }" />

    </invokers>
    <code class="com.rameses.gov.etracs.obo.models.BuildingPermitIssuanceModel" />
    <pages>
        <page template="com.rameses.gov.etracs.obo.views.BuildingPermitIssuancePage" />
    </pages>
</workunit>