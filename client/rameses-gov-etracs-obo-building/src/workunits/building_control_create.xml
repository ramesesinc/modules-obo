                target="popup"/>
                
       <invoker type="vw_building_permit_doc:form:docActions" 
                caption="Issue Document Control"
                schemaName="building_permit_doc"
                action="initDoc"
                visibleWhen="#{ entity.controlid == null &amp;&amp; entity.doctype.issuetype == 2  &amp;&amp; entity.app?.task?.state == 'releasing' }"
                target="popup"/>         
        
