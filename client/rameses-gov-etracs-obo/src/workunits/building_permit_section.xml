<workunit schemaName="vw_building_permit_section" processName="building_permit_section">
    <invokers>
        <invoker type="vw_building_permit_section:open" caption="Building Application Section"
                action="open" index="1"/>

        <!-- context related actions -->
        <invoker type="extActions" caption="Update Zone Class"
            action="updateZoneClass" index="1" xvisibleWhen="#{entity.typeid.toLowerCase() == 'zoning' }"/>

        <invoker type="extActions" caption="View Ancillary"
            action="viewAncillary" index="2" />
        
        <invoker type="extActions" caption="View Application"
            action="viewApplication" index="3" />

        <invoker type="extActions" caption="Add Finding"
        action="addFinding" index="4" />

        <invoker type="extActions" caption="Issue Permit/Clearance" index="20"
            action="issuePermit" visibleWhen="#{task.state == 'releasing' &amp;&amp; entity.issuance?.objid == null }"/>
        
        
    </invokers>
    <code class="com.rameses.gov.etracs.obo.models.BuildingPermitSectionModel" />
    <pages>
        <page template="com.rameses.gov.etracs.obo.views.BuildingPermitSectionPage" />
    </pages>
</workunit>